<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpDialog"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:background="@drawable/android_bg2"
    >


    <RelativeLayout
        android:id="@+id/helpRelativeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="You can click and hold a game's title to see additional options"
            android:textSize="20dp"
            android:textColor="#000000" />
            
     
        <Button
            android:id="@+id/helpClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/notepad"
            android:padding="10dp"
            android:text="Close"
            android:textSize="30dp" />

     
    </RelativeLayout>

</LinearLayout>