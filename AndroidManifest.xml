<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="1" android:versionName="1.0"
    package="edu.cmu.sv.tumeda.gamecounter" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="8"/>
        <application android:icon="@drawable/icon"

        android:label="@string/app_name" android:name="edu.cmu.sv.tumeda.gamecounter.GameCounterApplication">
        <activity android:label="@string/app_name" android:name="GameListActivity" android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".NewGameActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Light"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity android:name=".GameCounterActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Light"/>
        <activity android:name="edu.cmu.sv.tumeda.gamecounter.GameIncrementerActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Light"/>
    </application>
</manifest>
